<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_itemChatContent_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="new1"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:clickable="true"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_itemChatContent_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/gray"
            android:text="2021-01-01 23:59:59"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_itemChatContent_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/iv_itemChatContent_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_chat"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/iv_itemChatContent_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <com.example.course29.chat.record.AudioPlayerView
        android:id="@+id/apv_itemChatContent_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <TextView
        android:clickable="true"
        android:id="@+id/tv_itemChatContent_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[位置信息]"
        android:layout_margin="10dp"/>


</LinearLayout>